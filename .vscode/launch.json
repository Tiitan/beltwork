{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run (web + api)",
      "configurations": ["API (debug)", "Web (dev server)"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "API (debug)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:api"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Web (dev server)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:web"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Build & run container (prod)",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose up --build api",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Tests (execute)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm test",
      "cwd": "${workspaceFolder}"
    }
  ]
}
