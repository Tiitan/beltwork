{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run (locally, debug)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:api"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Build & run container (prod)",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose up --build api",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Tests (execute)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm test",
      "cwd": "${workspaceFolder}"
    }
  ]
}
